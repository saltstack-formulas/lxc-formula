{% macro install_on_debian_lxc(name, pkg) %}
"{{ pkg }} on LXC {{ name }}":
  cmd.run:
    - name: "lxc-attach --name {{name}} -- apt-get install -y {{ pkg }}"
    - unless: "lxc-attach --name {{name}} -- dpkg -s {{ pkg }}"
    - require:
        - lxc: {{ name }}
{% endmacro %}

